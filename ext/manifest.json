{
  "name": "no comment.",
  "version": "1.0.3",
  "manifest_version": 2,
  "description": "An extension for hiding most comment sections.",
  "default_locale": "en",
  "options_page": "src/options/index.html",
  "browser_action": {
    "default_icon": {
      "19": "icons/icon19.png",
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title":"no comment."
  },
  "background": {
    "scripts": ["src/background.js"],
    "persistent": false
  },
  "web_accessible_resources": [
    "src/watch_list.json"
  ],
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "http://*/",
    "https://*/",
     "webNavigation"
  ]
}